---
import { supabase } from "../../lib/supabase";
import Base from "../../layout/Base.astro";

const { providerId } = Astro.params;

const { data } = await supabase
  .from("providers")
  .select("*")
  .limit(1)
  .eq("id", Number(providerId))
  .single();
---

<Base title="provider">
